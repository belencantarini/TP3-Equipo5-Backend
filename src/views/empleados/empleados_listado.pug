extends ../layout

block content
  .container.mt-4
    .d-flex.justify-content-between.align-items-center.mb-3
      h2 Listado de Empleados
      a.btn.btn-primary(href="/empleados/nuevo") Nuevo Empleado

    a.btn.btn-link.px-0(href="/") Volver al inicio

    if error
      .alert.alert-danger.mt-3= error

    if empleados && empleados.length
      table.table.table-hover.align-middle.mt-3
        thead.table-light
          tr
            th Nombre
            th Apellido
            th DNI
            th Área
            th Rol
            th Activo
            th.text-end Acciones
        tbody
          each e in empleados
            tr
              td= e.nombre
              td= e.apellido
              td= e.dni
              td= e.area
              td= e.rol
              td= e.activo ? 'Sí' : 'No'
              td.text-end
                a.btn.btn-sm.btn-outline-primary.me-2(href=`/empleados/editar/${e._id}`) Editar
                form.d-inline(method="POST", action=`/empleados/eliminar/${e._id}`)
                  button.btn.btn-sm.btn-outline-danger(
                    type="submit"
                    onclick="return confirm('¿Seguro que deseas eliminar este empleado?');"
                  ) Eliminar
    else
      .alert.alert-info.mt-3 No hay empleados registrados.



