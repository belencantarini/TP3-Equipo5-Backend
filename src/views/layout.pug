doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    title Clínica Médica DiagnoCare – Sistema de Gestión Integral

    // Bootstrap 5
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

    style.
      body {
        background-color: #f8fafc;
      }

      .container-custom {
        margin-top: 2rem;
        max-width: 1200px;
      }

      .card-custom {
        border-radius: 8px;
        border: 1px solid #e1e1e1;
        background: white;
        padding: 1.5rem;
      }

      /* Tarjetas principales y estadísticas con hover suave */
      .card {
        transition: transform .15s ease-in-out;
        border-radius: 8px;
      }
      .card:hover {
        transform: translateY(-4px);
      }

      footer {
        margin-top: 3rem;
        padding: 1rem;
        background: #f7f9fc;
        border-top: 1px solid #e3e6ea;
        text-align: center;
        font-size: 0.85rem;
        color: #555;
      }

  body

    // NAVBAR PRINCIPAL
    nav.navbar.navbar-expand-lg.navbar-dark(style="background-color:#0d6efd;")
      .container
        a.navbar-brand(href="/") Clínica Médica DiagnoCare – Gestión Integral
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/") Inicio
            li.nav-item
              a.nav-link(href="/empleados") Empleados
            li.nav-item
              a.nav-link(href="/pacientes") Pacientes
            li.nav-item
              a.nav-link(href="/tareasmongo") Tareas

    // CONTENIDO PRINCIPAL
    .container.container-custom
      block content

    // FOOTER
    footer
      p © 2025 Clínica Médica DiagnoCare - Sistema de Gestión Clínica Integral

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
