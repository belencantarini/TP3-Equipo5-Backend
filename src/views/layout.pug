doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= titulo || "Sistema Clínica Integral"

    // Bootstrap
    link(rel="stylesheet" href="/css/bootstrap.min.css")
    link(rel="stylesheet" href="/css/styles.css")

  body
    // NAVBAR
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-4
      .container
        a.navbar-brand(href="/") Clínica Integral

        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#menu")
          span.navbar-toggler-icon

        .collapse.navbar-collapse#menu
          ul.navbar-nav.me-auto

            if usuario
              li.nav-item
                a.nav-link(href="/") Inicio

              if ["administrador","recepcion","medico"].includes(usuario.rol)
                li.nav-item
                  a.nav-link(href="/pacientes") Pacientes

              if usuario.rol === "administrador"
                li.nav-item
                  a.nav-link(href="/empleados") Empleados

              if ["administrador","mantenimiento"].includes(usuario.rol)
                li.nav-item
                  a.nav-link(href="/tareas") Tareas

              if ["administrador","mantenimiento"].includes(usuario.rol)
                li.nav-item
                  a.nav-link(href="/insumos") Insumos

          if usuario
            .d-flex.align-items-center.gap-3
              span.text-white #{usuario.nombre} (#{usuario.rol})
              a.btn.btn-sm.btn-light(href="/logout") Cerrar sesión
          else
            a.btn.btn-light(href="/login") Iniciar sesión

    .container.mt-4
      block content

    script(src="/js/bootstrap.bundle.min.js")

